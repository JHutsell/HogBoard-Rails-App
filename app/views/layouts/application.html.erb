<!DOCTYPE html>
<html>
  <head>
    <title>Hogboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if @logged_in %>

  <p>
    Logged In As: <%= @current_student.name %> 
    <br>
    <%= link_to "Home", student_path(@current_student) %> <%= button_to "Log Out", "/auth", method: :delete %>

<% else %>

  <%= link_to "Login", "/login" %>
  <%= link_to "Register", new_student_path %>

<% end %>


    <%= yield %>
  </body>
</html>
