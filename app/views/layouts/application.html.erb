<!DOCTYPE html>
<html>
  <head>
    <title>Hogboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if @logged_in %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">
    <%= image_tag ("crest.png") %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" <%= link_to "Home", student_path(@current_student) %> <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "All Courses", courses_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "All Clubs", clubs_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "All Professors", professors_path %></a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Gryffindor
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <% Student.gryffindor_students.each do |student| %>
            <a class="dropdown-item" <%= link_to student.name, student_path(student) %></a>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Slytherin
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <% Student.slytherin_students.each do |student| %>
            <a class="dropdown-item" <%= link_to student.name, student_path(student) %></a>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Ravenclaw
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <% Student.ravenclaw_students.each do |student| %>
            <a class="dropdown-item" <%= link_to student.name, student_path(student) %></a>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Hufflepuff
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <% Student.hufflepuff_students.each do |student| %>
            <a class="dropdown-item" <%= link_to student.name, student_path(student) %></a>
          <% end %>
        </div>
      </li>

      <div id="logout"> <li class="nav-item">
        <a class="nav-link" <%= link_to "Log Out", "/auth", method: :delete %></a>
      </li>
      </div>
    </ul>
  </div>
</nav>

<style type="text/css">body { cursor: url('data:image/x-icon;base64,'), auto; }</style>


<% end %>

    <%= yield %>

    <div class="foot">
      <footer>
        <p>HogBoard Â©2019<p>
      </footer>
    </div>

  </body>
</html>
