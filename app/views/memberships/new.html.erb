<div class="my-clubs-sidebar">
    <h1>Club Sign Up</h1>

    <% if flash[:message] %>
        <%= flash[:message] %>
    <% end %>

    <%= form_for @membership do |f| %>
        <%= f.hidden_field :student_id %>
        <%= f.label :club_id %>
        <%= f.collection_select :club_id, @clubs, :id, :name %>
        <button type="submit" class="btn btn-success">Sign Up</button>
    <% end %>
</div>