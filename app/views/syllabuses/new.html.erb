<div class="my-classes-sidebar">
    <h1>Class Sign Up</h1>

    <% if flash[:message] %>
        <%= flash[:message] %>
    <% end %>

    <%= form_for @syllabus do |f| %>
        <%= f.hidden_field :student_id %>
        <%= f.label :course_id %>
        <%= f.collection_select :course_id, @courses, :id, :name %>
        <button type="submit" class="btn btn-success">Sign Up</button>
    <% end %>
</div>