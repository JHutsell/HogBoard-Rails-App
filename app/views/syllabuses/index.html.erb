<div class="my-classes-sidebar">
    <h1>All of your Classes</h1>

    <ul>
        <% @syllabuses.each do |syllabus| %>
            <li>
                <%= link_to syllabus.course.name, course_path(syllabus.course) %>
                <%= button_to "Drop this Course", syllabus_path(syllabus), method: :delete, class: "btn btn-danger"%>
            </li>
        <% end %>
    </ul>
</div>