<div id="class-show">
<h1><%= @course.name %></h1>
<h3>Taught by: <%= link_to @course.professor.name, professor_path(@course.professor), style: 'color: yellow;', class: 'css_class' %></h3>
<br>
<br>
<h4>Class Description: </h4>
<p>     <%= @course.description %></p>
<p>Class Roster: </p>
<ul>
    <% @students.each do |student| %>
        <li>
            <%= link_to student.name, student_path(student), style: 'color: yellow;', class: 'css_class' %>
        </li>
    <% end %>
</ul>
<br>
<h5> <%= link_to "Back", courses_path, style: 'color: yellow;', class: 'css_class' %> </h5>
</div>