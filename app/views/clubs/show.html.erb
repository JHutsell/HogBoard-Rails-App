<h1><%= @club.name %></h1>

<p><%= @club.description %></p>

<p>Club Roster: </p>
<ul>
    <% @students.each do |student| %>
        <li>
            <%= link_to student.name, student_path(student) %>
        </li>
    <% end %>

<h4>
Post a Comment:
<%= form_for @chat do |f| %>
    <br>
    <%= f.text_area :content %>
    <%= f.hidden_field :club_id, :value => @club.id %>
    <%= f.hidden_field :student_id, :value => @student.id %>
    <br>
    <%= f.submit "Post" %>
<% end%>

</h4>

</ul>
<p>Recent comments: </p>
<ul>
    <% @chats.each do |chat| %>
        <li>
            "<%= chat.content %>" 
            <br>
            by: <%= link_to chat.student.name, student_path(chat.student) %>
        </li>
    <% end %>
</ul>

 <%= link_to "View Your Comments", chats_path %>


